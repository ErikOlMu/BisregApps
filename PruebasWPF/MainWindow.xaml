<Window x:Class="PruebasWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruebasWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <FlowDocumentPageViewer>
            <FlowDocument x:Name="flowDoc" PageHeight="29.7cm" PageWidth="21cm" ColumnWidth="999999" PagePadding="0">
                <Table>
                    <TableRowGroup>
                        <TableRow>
                            <TableCell>
                                <BlockUIContainer>
                                    <Canvas Width="10"/>
                                </BlockUIContainer>
                            </TableCell>
                            <TableCell>
                                <BlockUIContainer>
                                    <Canvas Width="10"/>
                                </BlockUIContainer>
                            </TableCell>
                        </TableRow>
                    </TableRowGroup>
                </Table>
            </FlowDocument>
        </FlowDocumentPageViewer>
    </Grid>
</Window>
