<Window x:Class="EtiquetasBisreg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtiquetasBisreg"
        mc:Ignorable="d"
        Title="Cantidades" Height="450" Width="281">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Content="Cantidad" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <DataGrid x:Name="dtg_ReglasCantidad" Margin="10" Grid.Row="1" Grid.Column="0" HorizontalScrollBarVisibility="Disabled"/>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnGuardarReglasCantidad" Grid.Column="1" Margin="10,5" Content="Guardar" Click="btnGuardarReglasCantidad_Click"/>

        </Grid>
    </Grid>
</Window>
